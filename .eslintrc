{
  "env": {
    "browser": true
  },
  "ecmaFeatures": {
    "modules": true,
    "blockBindings": true,
    "arrowFunctions": true,
    "classes": true,
    "defaultParams": true,
    "restParams": true,
    "templateStrings": true,
    "objectLiteralComputedProperties": true,
    "objectLiteralShorthandMethods": true,
    "forOf": true
  },
  "rules": {
    "no-shadow": 2,
    "eqeqeq": [2, "smart"]
  },
  "extends": "eslint:recommended"
}
